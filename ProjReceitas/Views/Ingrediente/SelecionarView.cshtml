@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Ingredientes";
}

<div class="container-fluid text-center">

    <div class="row">
        <div class="col-md-12">
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a class="btn btn-primary" role="button" asp-controller="Ingrediente"
                   asp-action="InserirExibir">Adicionar Ingrediente</a>
            </div>
        </div>
    </div>
    <br />

    @if (TempData["MsgSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MsgSucesso"] &emsp;
            <button type="button"
                    class="fechar-alert btn btn-success btn-sm"
                    data-bs-dismiss="alert" 
                    aria-label="Close">
                X
            </button>
        </div>
    }
    @if (TempData["MsgErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MsgErro"] &emsp;
            <button type="button"
                    class="fechar-alert btn btn-danger btn-sm"
                    data-bs-dismiss="alert" 
                    aria-label="Close">
                X
            </button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Ingredientes</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 d-flex flex-column">
            <table class="table table-striped table-hover"> 
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Preço p/ Unidade</th> 
                        <th scope="col">Ações</th> 
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Rows.Count > 0)
                    {
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["Id_Ingrediente"]</td>
                                <td>@row["Nome"]</td>
                                <td>
                                    @if (row["Preco"] != DBNull.Value)
                                    {
                                        @Convert.ToDecimal(row["Preco"]).ToString("C")
                                    }
                                    else
                                    {
                                        @:N/A
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Ações do Ingrediente">
                                        <a role="button" class="btn btn-sm btn-primary me-1" 
                                           asp-controller="Ingrediente"
                                           asp-action="AlterarExibir"
                                           asp-route-idIngrediente="@row["Id_Ingrediente"]">
                                            <i class="fa-solid fa-pencil"></i> Editar
                                        </a>
                                        <a role="button" class="btn btn-sm btn-danger"
                                           asp-controller="Ingrediente"
                                           asp-action="ExcluirExibir"
                                           asp-route-idIngrediente="@row["Id_Ingrediente"]">
                                            <i class="fa-solid fa-trash"></i> Excluir
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">Nenhum ingrediente encontrado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    </script>
}